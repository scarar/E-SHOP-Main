{
    "name": "scarar/e-shop-main",
    "description": "E-commerce platform with improved security and functionality",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.3",
        "symfony/http-foundation": "^5.4",
        "paragonie/random_compat": "^2.0",
        "phpmailer/phpmailer": "^6.5",
        "twig/twig": "^3.0",
        "monolog/monolog": "^2.3",
        "denpa/php-bitcoinrpc": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
